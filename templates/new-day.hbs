<form>
  <div class="form-group">
    <label for="dayName">Day Name</label>
    {{input id="dayName" value=dayName class="form-control"}}
  </div>
  <div class="form-group">
    <label for="dayDate">Date</label>
    {{input value=dayDate id="dayDate" class="form-control"}}
  </div>
  <button class="btn btn-primary" {{action 'save'}}>Save Day</button>

</form>
